<%- include("../partials/headerSistema") %>
        <!-- Begin page -->
        <div class="wrapper">
            <!-- ========== Left Sidebar Start ========== -->
            <%- include("../partials/sidebarSistema") %>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">
                    <!-- Topbar Start -->
                    <%- include("../partials/topbarSistema") %>
                    <!-- end Topbar -->

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="/sistema/dashboard">Página Inicial</a></li>
                                            <li class="breadcrumb-item"><a href="/sistema/servicos">Serviços</a></li>
                                            <li class="breadcrumb-item active">Lista de serviços</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">Serviços</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 

                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a href="servicos/cadastrar" class="btn btn-danger btn-rounded mb-3"><i class="mdi mdi-plus"></i> Cadastrar Serviço</a>
                            </div>
                            
                        </div> 
                        <!-- end row-->
                        
                        <div class="row">
                            <% servicoObj.forEach(servico=> { %>
                            <div class="col-lg-6 col-xxl-3">
                                
                                <!-- project card -->
                                
                                <div class="card d-block">
                                    <div class="card-body">
                                        <div class="dropdown card-widgets">
                                            <a href="#" class="dropdown-toggle arrow-none" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="dripicons-dots-3"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <!-- item-->
                                                <a href="/sistema/servicos/editar/<%= servico.id_servico %>" class="dropdown-item"><i class="mdi mdi-pencil me-1"></i>Editar</a>
                                                <!-- item-->
                                                
                                                <a href="#deletar" class="dropdown-item" data-bs-toggle="modal"><i class="mdi mdi-delete me-1"></i>Deletar</a>
                                            </div>
                                        </div>
                                        <!-- project title-->
                                        <h4 class="mt-0">
                                            <a href="apps-projects-details.html" class="text-title"><%= servico.nomeServico %></a>
                                        </h4>
                                        <div class="badge bg-success mb-3">R$ <%= servico.valorServico %></div>

                                        <p class="text-muted font-13 mb-3"><%= servico.descricaoServico %>
                                        </p>

                                        <!-- project detail-->
                                       
                                    </div> <!-- end card-body-->
                                    
                                </div> <!-- end card-->
                                
                            </div> <!-- end col -->
                            <% }); %>
                        
                        </div>
                        <!-- end row-->
                        <% servicoObj.forEach(servico=> { %>
                        <!-- Modal -->
                        <div class="modal fade" id="deletar" data-bs-backdrop="static"
                        data-bs-keyboard="false" tabindex="-1"
                        aria-labelledby="modalDeletar" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header bg-warning text-white">
                                    <h5 class="modal-title" id="modalDeletar">Atenção!!!</h5>
                                    <button type="button" class="btn-close"
                                        data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Você está prestes a deletar um serviço. Tem certeza que deseja continuar?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary"
                                        data-bs-dismiss="modal">Não! Cliquei sem querer!</button>
                                    <form action="/sistema/servicos/excluir/<%= servico.id_servico %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger text-white">
                                             Claro! Sei o que estou fazendo.
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <!-- End Modal -->
                    </div> <!-- container -->

                </div> <!-- content -->
                <%- include("../partials/footerSistema") %>